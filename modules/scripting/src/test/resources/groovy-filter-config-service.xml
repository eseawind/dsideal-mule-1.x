<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:script="http://www.mulesoft.org/schema/mule/scripting"
      xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
       http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/current/mule-scripting.xsd
       http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd">

    <script:filter name="scriptFilter">
        <script:script engine="groovy">
            <script:text>
                return !payload.toString().equals("1")
            </script:text>
        </script:script>
    </script:filter>
    
    <model>
        <service name="filterService">
            <inbound>
                <inbound-endpoint address="vm://in1" exchange-pattern="one-way">
                    <filter ref="scriptFilter"/>
                </inbound-endpoint>
            </inbound>
            <echo-component/>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint address="vm://out1" exchange-pattern="one-way"/>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>
